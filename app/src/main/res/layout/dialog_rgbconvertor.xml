<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/line1"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgColorExample"
        android:layout_alignLeft="@+id/imgColorExample"
        android:layout_alignStart="@+id/imgColorExample"
        android:background="@drawable/rgb_convertor_diviger"
        android:layout_alignRight="@+id/imgColorExample"
        android:layout_alignEnd="@+id/imgColorExample">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView android:id="@+id/TxtColorModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/mainColor"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:gravity="center_vertical|left"
        android:minHeight="50dp"
        android:layout_below="@+id/TxtColorModel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/TxtColorModel"
        android:layout_alignStart="@+id/TxtColorModel"
        android:layout_marginLeft="8dp" />
        </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgCopy"
        android:layout_alignTop="@+id/mainColor"
        android:layout_alignRight="@+id/listViewConvert"
        android:layout_alignEnd="@+id/listViewConvert"
        android:src="@drawable/copy_image"
        android:layout_alignBottom="@+id/mainColor"
        android:layout_margin="5dp"
        android:padding="5dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imgColorExample"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:elevation="3dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewConvert"
        android:layout_below="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/imgColorExample"
        android:layout_alignEnd="@+id/imgColorExample"
        android:layout_alignLeft="@+id/line1"
        android:layout_alignStart="@+id/line1" />


</RelativeLayout>